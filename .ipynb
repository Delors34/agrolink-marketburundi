from IPython.display import display, HTML, clear_output
from deep_translator import GoogleTranslator
import plotly.graph_objs as go
import plotly.io as pio

# --- Initialisation des données et de la traduction ---
CURRENCY = "BIF"
# Stockage de l'état de la session (simulé)
session = {"user": None, "lang": "fr"}
msg = "" # Message global pour les actions

users = {
    # Noms burundais courants
    "prod": {"name": "Nadia N.", "role": "productrice"},
    "buy": {"name": "Elias M.", "role": "acheteur"}
}
# Produits agricoles communs au Burundi
products = [
    {"nom": "Haricot", "prix": 2500, "qte": 850, "producteur": "Nadia N."},
    {"nom": "Maïs", "prix": 1800, "qte": 600, "producteur": "Nadia N."},
    {"nom": "Manioc", "prix": 1600, "qte": 1200, "producteur": "Nadia N."},
]

LANGS = {
    'fr': 'Français',
    'en': 'English',
    'run': 'Ikirundi',
    'sw': 'Kiswahili'
}

# Fonction de traduction
def tr(text, lang):
    if lang == 'fr':
        return text
    try:
        # Utilise deep_translator
        return GoogleTranslator(source='auto', target=lang).translate(text)
    except Exception:
        # Retourne le texte original si la traduction échoue
        return text

# --- Fonctions pour l'affichage (Remplacement des Routes Flask) ---

def generate_navbar(lang, active_page):
    """Génère la barre de navigation et le sélecteur de langue."""
    # Note: On utilise des appels JS (Python.send_user_input) pour simuler la navigation
    nav_links = {
        "index": tr("Accueil", lang),
        "dashboard": tr("Tableau de Bord", lang),
        "market": tr("Marché Agricole", lang),
        "login": tr("Connexion", lang),
    }

    nav_html = ' | '.join([
        f'<a href="#" onclick="run_page(\'{key}\', \'{lang}\')" style="color:#fff;">{text}</a>'
        if key != active_page else f'<b style="color:#fff;text-decoration:underline;">{text}</b>'
        for key, text in nav_links.items()
    ])

    lang_options = "".join([
        f'<option value="{code}" {"selected" if code==lang else ""}>{name}</option>'
        for code, name in LANGS.items()
    ])

    return f"""
<header style="background:#006400;color:#fff;padding:1em;">
<h1>{tr("AgroLink-MarketPlace : Lien direct pour le marché burundais", lang)}</h1>
<form>
<label>{tr("Choisir la langue", lang)}:</label>
<select name="lang" onchange="run_page('{active_page}', this.value)">
{lang_options}
</select>
</form>
<nav>{nav_html}</nav>
</header>
"""

def generate_footer():
    """Génère le pied de page."""
    return """
<footer style="background:#006400;color:#fff;text-align:center;padding:1em;margin-top:2em;">
&copy; 2025 AgroLink-MarketPlace Burundi
</footer>
"""

def generate_base_html(body_content, lang, active_page="index"):
    """Crée la structure HTML complète pour l'affichage dans Colab."""
    navbar = generate_navbar(lang, active_page)
    footer = generate_footer()
    return f"""
<html>
<head><meta charset="utf-8"><title>AgroLink-MarketPlace Burundi</title></head>
<body style="font-family: Arial; background: #f0f8ff;">
{navbar}
<section style="max-width:800px;margin:2em auto;padding:1.5em;background:#fff;border-radius:10px;box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
{body_content}
</section>
{footer}
</body></html>
"""

def index_page(lang):
    """Simule la route /."""
    body_content = f"""
<h2>{tr("Bienvenue sur AgroLink-MarketPlace! La plateforme agricole du Burundi.", lang)}</h2>
<p>{tr("Connectez-vous directement aux producteurs et acheteurs burundais. Obtenez les prix en BIF, les statistiques et les tendances. Publiez vos récoltes ou trouvez des opportunités.", lang)}</p>
<p><button onclick="run_page('login', '{lang}')" style="background-color: #008000; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">{tr("Accéder à la Connexion", lang)}</button></p>
"""
    return generate_base_html(body_content, lang, active_page="index")

def login_page(lang, message=""):
    """Simule la route /login."""
    # Note: On utilise un appel JS vers Python pour la soumission du formulaire
    body_content = f"""
<h2>{tr("Connexion AgroLink", lang)}</h2>
<p>{tr("Utilisez 'prod' pour la productrice Nadia N. ou 'buy' pour l'acheteur Elias M.", lang)}</p>
<form id="loginForm">
<label>Username (prod ou buy):</label><input name="username" id="username_input" style="margin-bottom: 10px;"/><br>
<button type="button" onclick="login_submit('{lang}')" style="background-color: #008000; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">{tr("Entrer", lang)}</button>
</form>
<p style="color:red; margin-top: 10px;">{message}</p>
"""
    return generate_base_html(body_content, lang, active_page="login")

def dashboard_page(lang):
    """Simule la route /dashboard."""
    user = users.get(session.get("user"), {"name": tr("Invité", lang), "role": "invité"})

    # Prépare les données pour le graphique
    prod_labels = [tr(p["nom"], lang) for p in products]
    prod_values = [p["qte"] for p in products]

    fig = go.Figure()
    fig.add_trace(go.Bar(x=prod_labels, y=prod_values, marker_color='#3cb371'))

    fig.update_layout(
        title=tr("Production Agricole sur AgroLink (Quantités disponibles)", lang),
        xaxis_title=tr("Produit", lang),
        yaxis_title=tr("Quantité (kg)", lang),
        template="plotly_white"
    )
    # Exporte le graphique au format HTML
    graph_html = pio.to_html(fig, full_html=False, include_plotlyjs="cdn")

    body_content = f"""
<h2>{tr("Tableau de Bord",lang)} : {user["name"]} ({tr(user["role"], lang)})</h2>
<div style="margin-top: 20px;">{graph_html}</div>
<p style="margin-top: 20px;">
<button onclick="run_page('market', '{lang}')" style="background-color: #4682b4; color: white; padding: 8px 12px; border: none; border-radius: 5px; cursor: pointer;">{tr("Voir le marché", lang)}</button>
<button onclick="logout_user('{lang}')" style="background-color: #cc0000; color: white; padding: 8px 12px; border: none; border-radius: 5px; cursor: pointer;">{tr("Déconnexion", lang)}</button>
</p>
"""
    return generate_base_html(body_content, lang, active_page="dashboard")


def market_page(lang, message=""):
    """Simule la route /market et la soumission de formulaire."""
    table_rows = "".join([
        f"""
        <tr>
            <td>{tr(prod['nom'], lang)}</td>
            <td>{int(prod['prix'])}</td>
            <td>{prod['qte']}</td>
            <td>{tr(prod['producteur'], lang)}</td>
        </tr>
        """ for prod in products
    ])

    form_content = ""
    if session.get("user"):
        # Le formulaire soumet l'action à une fonction Python
        form_content = f"""
<h3 style="margin-top: 30px;">{tr("Ajouter une Offre de Produit", lang)}</h3>
<form id="productForm" style="padding: 15px; border: 1px solid #ccc; border-radius: 5px;">
<label style="display: inline-block; width: 150px;">{tr("Nom du produit", lang)}:</label><input name="nom" id="prod_nom" required style="margin-bottom: 10px;"/><br>
<label style="display: inline-block; width: 150px;">{tr("Prix", lang)} ({CURRENCY}/kg):</label><input name="prix" id="prod_prix" type="number" step="0.01" required style="margin-bottom: 10px;"/><br>
<label style="display: inline-block; width: 150px;">{tr("Quantité", lang)} (kg):</label><input name="qte" id="prod_qte" type="number" required style="margin-bottom: 10px;"/><br>
<button type="button" onclick="market_submit('{lang}')" style="background-color: #008000; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">{tr("Publier l'Offre", lang)}</button>
</form>
<p style="color:green; margin-top: 15px;">{message}</p>
"""
    else:
        form_content = f"""
<h3 style="margin-top: 30px;">{tr("Ajouter une Offre de Produit", lang)}</h3>
<p style="color:red;">{tr("Veuillez vous connecter pour ajouter un produit.", lang)}</p>
"""

    body_content = f"""
<h2>{tr("Marché Agricole d'AgroLink", lang)}</h2>
<table border="1" width="100%" style="border-collapse: collapse; text-align: left;">
<tr style="background-color: #e6ffe6;">
<th>{tr("Produit", lang)}</th>
<th>{tr("Prix", lang)} ({CURRENCY}/kg)</th>
<th>{tr("Quantité", lang)} (kg)</th>
<th>{tr("Producteur", lang)}</th>
</tr>
{table_rows}
</table>
{form_content}
<p style="margin-top: 15px;"><button onclick="run_page('dashboard', '{lang}')" style="background-color: #4682b4; color: white; padding: 8px 12px; border: none; border-radius: 5px; cursor: pointer;">{tr("Retour au Tableau de Bord", lang)}</button></p>
"""
    return generate_base_html(body_content, lang, active_page="market")


# --- Fonctions de Soumission et de Redirection (Remplacement du Comportement du Serveur) ---

def handle_login(username, lang):
    """Gère la logique de connexion."""
    global msg
    if username in users:
        session["user"] = username
        msg = ""
        run_page("dashboard", lang)
    else:
        msg = tr("Identifiant non reconnu. Veuillez utiliser 'prod' ou 'buy'.", lang)
        run_page("login", lang)

def handle_market_submit(nom, prix, qte, lang):
    """Gère la logique d'ajout de produit."""
    global msg
    if session.get("user"):
        try:
            prix_float = float(prix)
            qte_int = int(qte)
            prod_name = users.get(session.get("user"), {}).get("name", tr("Invité", lang))

            products.append({"nom": nom, "prix": prix_float, "qte": qte_int, "producteur": prod_name})
            msg = tr("Votre produit a été ajouté au marché d'AgroLink!", lang)
        except ValueError:
            msg = tr("Erreur : Le prix ou la quantité doit être un nombre valide.", lang)
    else:
        msg = tr("Veuillez vous connecter pour ajouter un produit.", lang)

    run_page("market", lang)

def logout(lang):
    """Gère la déconnexion."""
    session["user"] = None
    run_page("index", lang)


# --- Le Moteur d'Affichage Principal ---

def run_page(page_name="index", lang="fr"):
    """
    Fonction principale pour afficher la page demandée.
    Remplace le mécanisme de routage de Flask.
    """
    global msg
    # Assurez-vous que la langue est stockée pour les prochains appels
    session["lang"] = lang

    clear_output(wait=True) # Efface la sortie précédente dans Colab

    page_functions = {
        "index": index_page,
        "login": lambda l: login_page(l, msg),
        "dashboard": dashboard_page,
        "market": lambda l: market_page(l, msg),
    }

    if page_name in page_functions:
        html_content = page_functions[page_name](lang)

        # Ajout du code JavaScript pour la communication entre HTML et Python
        js_code = f"""
<script>
    // Fonction principale pour naviguer entre les pages
    function run_page(page, new_lang) {{
        google.colab.kernel.invokeFunction('notebook.run_page_py', [page, new_lang], {{}});
    }}

    // Soumission du formulaire de connexion
    function login_submit(lang) {{
        const username = document.getElementById('username_input').value;
        google.colab.kernel.invokeFunction('notebook.handle_login_py', [username, lang], {{}});
    }}

    // Soumission du formulaire d'ajout de produit
    function market_submit(lang) {{
        const nom = document.getElementById('prod_nom').value;
        const prix = document.getElementById('prod_prix').value;
        const qte = document.getElementById('prod_qte').value;
        google.colab.kernel.invokeFunction('notebook.handle_market_submit_py', [nom, prix, qte, lang], {{}});
    }}

    // Déconnexion
    function logout_user(lang) {{
        google.colab.kernel.invokeFunction('notebook.logout_py', [lang], {{}});
    }}
</script>
"""
        display(HTML(js_code + html_content))
    else:
        display(HTML(f"<h2>{tr('Page non trouvée', lang)}</h2>"))

# --- Enregistrement des fonctions Python pour les appels JavaScript ---
# Ceci permet aux boutons et aux formulaires HTML d'appeler le code Python.
from google.colab import output
output.register_callback('notebook.run_page_py', run_page)
output.register_callback('notebook.handle_login_py', handle_login)
output.register_callback('notebook.handle_market_submit_py', handle_market_submit)
output.register_callback('notebook.logout_py', logout)


run_page('index', session["lang"])
